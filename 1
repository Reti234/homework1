import random

def magic_ball():
    answers = [
        "Бесспорно",
        "Предрешено",
        "Никаких сомнений",
        "Определённо да",
        "Можешь быть уверен в этом",
        "Мне кажется — да",
        "Вероятнее всего",
        "Хорошие перспективы",
        "Знаки говорят — да",
        "Да",
        "Пока не ясно, попробуй снова",
        "Спроси позже",
        "Лучше не рассказывать",
        "Сейчас нельзя предсказать",
        "Сконцентрируйся и спроси опять",
        "Даже не думай",
        "Мой ответ — нет",
        "По моим данным — нет",
        "Перспективы не очень хорошие",
        "Весьма сомнительно"
    ]
    
    print("Привет! Я магический шар. Я знаю ответ на любой твой вопрос.")
    print("Задай мне вопрос и я дам тебе ответ. Для выхода введи 'Выход'.")
    
    while True:
        question = input("Задай вопрос: ")
        
        if question.lower() == "выход":
            break
        
        answer = random.choice(answers)
        print("Магический шар говорит:", answer)
        print()

magic_ball()
